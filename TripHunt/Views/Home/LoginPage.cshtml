@model TripHunt.Models.LoginDetails
@{
    ViewData["Title"] = "LoginPage";
}
<link rel="stylesheet" href="~/CSS/LoginStyle.css">

<h2>Welcome to Trip Hunt! </h2>
<div class="container" id="container">
    <div class="form-container sign-up-container">
    </div>
    <div class="form-container sign-in-container">
        <form class="login" asp-action="LoginAction" asp-controller="Home" method="post">
            <h1>Sign in</h1>
            <input type="email" asp-for="userName"  placeholder="Email" />
            <input type="password" asp-for="password" placeholder="Password" />
            <a href="#">Forgot your password?</a>
            <button>Sign In</button>
        </form>
    </div>
    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-left">
            </div>
            <div class="overlay-panel overlay-right">
                <form  asp-action="Registration" asp-controller="Home" method="post">
                    <h1>Hello, Friend!</h1>
                    <p>Enter your personal details and start journey with us</p>
                    <button class="ghost" id="signUp">Sign Up</button>
                    </form>
            </div>
        </div>
    </div>
</div>

